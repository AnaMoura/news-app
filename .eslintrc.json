{
  "env": {
    "browser": true,
    "es6": true,
    "jest": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:import/recommended",
    "prettier"
  ],
  "parser": "babel-eslint",
  "plugins": ["prettier"],
  "settings": {
    "import/resolver": {
      "babel-module": {}
    },
    "react": {
      "version": "16"
    }
  },
  "rules": {
    "react/jsx-sort-props": "error",
    "react/sort-comp": [
      "error",
      {
        "order": [
          "static-methods",
          "instance-variables",
          "lifecycle",
          "everything-else",
          "render"
        ]
      }
    ],
    "sort-keys": "error"
  }
}
